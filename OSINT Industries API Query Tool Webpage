<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Query Tool</title>
</head>
<body>
    <h2>Enter Email or Phone Number:</h2>
    <input type="text" id="inputValue" placeholder="Enter email or phone number">
    <button onclick="fetchData()">Submit</button>

    <h3>API Response:</h3>
    <div id="dataContainer"></div>

    <script>
        function fetchData() {
            const inputValue = document.getElementById('inputValue').value;
            const url = `https://osint.industries/api/email/${inputValue}`;

            fetch(url, {
                method: 'GET',
                headers: {
                    'accept': 'application/json',
                    'api-key': 'fec7b4c608be80fe61c9c9be1d08fe74' // Your API key
                }
            })
            .then(response => response.json())
            .then(data => {
                renderData(data);
            })
            .catch(error => {
                document.getElementById('dataContainer').textContent = 'Error fetching data: ' + error;
            });
        }

        function renderData(jsonData) {
            const container = document.getElementById('dataContainer');

            jsonData.data.forEach(item => {
                // Create a div for each module
                const moduleDiv = document.createElement('div');

                // Add website name
                const websiteName = document.createElement('h2');
                websiteName.textContent = item.module;
                moduleDiv.appendChild(websiteName);

                // Example: Add username (adjust based on actual data properties)
                const username = document.createElement('p');
                username.textContent = "Username: " + item.data.username;
                moduleDiv.appendChild(username);

                // Append the module div to the container
                container.appendChild(moduleDiv);
            });
        }
    </script>
</body>
</html>

